import java.util.Scanner;

// Marcus Sjolin


public class CoffeeKlatsch {

    public static void main(String[] args) {
        // Declare variable to store coffee size
        String size; 

        // Create new scanner called kbScan
        Scanner kbScan = new Scanner(System.in); 

        // Declare a reference to a CoffeeMachine.
        CoffeeMachine coffeeMachineNew;
        // Create a new CoffeeMachine and make the variable refer to it.
        coffeeMachineNew = new CoffeeMachine();

        // Add water and beans to the CoffeeMachine.
        coffeeMachineNew.addWater(10000); // Adds 10000mL
        coffeeMachineNew.addBeans();

        // Prompt for coffee strength.
        System.out.println("Please enter a coffee strength: weak, regular or strong");
        String strength = kbScan.next().toLowerCase(); // Scan for user input.
        // Loop until a valid entry is given.
        do {
            if (strength.equals("weak") || strength.equals("regular") || strength.equals("strong")) { // Check for valid entry
                break; // Exit loop.
            } else {
                System.out.println("Please enter a valid coffee strength (weak, regular or strong)"); // Prompt user for valid entry.
                strength = kbScan.next().toLowerCase(); // Scan for new input for strength.
            }
        } while (true);
        // Set coffee strength
        coffeeMachineNew.setStrength(strength); // Assign strength to coffeeMachineNew.
        // Grind the beans.
        coffeeMachineNew.grindBeans();
        // Declare a reference to a CoffeeCup.
        CoffeeCup newCoffee;

        // Prompt user for size
        System.out.println("Please enter a size for your coffee. You may choose small, medium or large."); 
        size = kbScan.nextLine(); // Scan for user input.
        do { // Loop until a valid entry is entered.
            if (size.toLowerCase().equals("small") || size.toLowerCase().equals("medium") || size.toLowerCase().equals("large")) { // Check for valid entry.
                break; // Break from loop.
            } else {
            System.out.println("Please enter a valid entry: small, medium or large"); // Prompt for a valid entry.
            size = kbScan.nextLine(); // Scan for user input for size.
            }
        } while (true);
  
        // Prompt user for name
        System.out.println("Please enter a coffee name: ");
        newCoffee = new CoffeeCup(kbScan.nextLine(), size); // Scan for user input and create new coffee cup

        // Have your CoffeeMachine brew coffee into the coffee cup.
        coffeeMachineNew.brew(newCoffee);

        // Drink from the cup.
        newCoffee.drink();
        // Try to drink again --the cup is now empty.
        newCoffee.drink();
        
        // Declare ANOTHER coffee cup reference and intialize it.
        CoffeeCup coffeeTwo = new CoffeeCup("Coffee", "medium");
        // Brew coffee into the new cup.
        coffeeMachineNew.brew(coffeeTwo);
        
        // Try to drink from the first cup --it's still empty!
        newCoffee.drink();
        // Drink from the second cup.
        coffeeTwo.drink();
        
        // Print a sigh of satisfaction.
        System.out.println("Ahhhh!");
    }
}
